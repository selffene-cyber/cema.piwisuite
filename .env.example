# CEMA Application Environment Variables Template
# Copy this file to .env and fill in the values

# Cloudflare API Token (for wrangler deployment)
# Get from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare Account ID
# Get from: https://dash.cloudflare.com/_/account/overview
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# R2 Credentials (for direct R2 access)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_BUCKET_NAME=cema-files

# API Configuration
VITE_API_URL=http://localhost:8787
# VITE_API_URL=https://your-worker.your-subdomain.workers.dev

# Database Configuration (if using direct D1 access)
# DATABASE_ID=your_database_id

# Application Settings
NODE_ENV=development
